{
  "manifest_version": 2,
  "name": "Phoenix Blocker",
  "description": "Browser extension add-on for the Phoenix desktop application. Users should only install this extension if they own Phoenix.",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
      "default_icon": "images/icon48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "phoenix.blocker@phoenix.org",
      "strict_min_version": "50.0"
    }
  },
  "web_accessible_resources": [
    "images/*.*",
    "fonts/*.woff",
    "scripts/*.*",
    "df_youtube/scripts/*.*",
    "df_youtube/css/*.*",
    "*.html"
  ],
  "background": {
    "scripts": ["scripts/phoenix.js"],
    "persistent": true,
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["df_youtube/scripts/df_youtube.js"]
    }
  ],
  "permissions": ["<all_urls>","tabs", "nativeMessaging", "webNavigation"]
}